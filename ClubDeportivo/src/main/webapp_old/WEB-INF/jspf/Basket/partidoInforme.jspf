     <tr>
        <td>${estadistica.tirosLejanosLocal}</td><th>Tiros Lejanos</th><td>${estadistica.tirosLejanosVisitante}</td>        
    </tr>
     <tr>
        <td>${estadistica.tirosPuertaLocal}</td><th>Tiros Area</th><td>${estadistica.tirosPuertaVisitante}</td>        
