            <c:forEach var="obj" items="${estadistica.tarjetasVisitanteTxt}">
                ${obj}</br>
            </c:forEach>
        </td>
    </tr>
    <tr>        
        <td>
            <c:forEach var="obj" items="${estadistica.lesionadosLocalTxt}">
                ${obj}</br>
            </c:forEach>
        </td>
